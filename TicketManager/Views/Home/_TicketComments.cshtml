@model IEnumerable<TicketDataModel.TicketComment>

@if (Model.Count() > 0)
{
<div class="ticket-comments">
    <p><strong>Комментарии:</strong></p>
        @foreach (var item in Model)
        {
            <div class="comment-body">
                <h1>Автор: <strong>@item.Author.Name</strong>, дата: <strong>@item.CommentDate</strong></h1>
                <p>@item.CommentText</p>
            </div>
        }

</div>
}